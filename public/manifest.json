{
  "manifest_version": 3,
  "name": "Ask Zen Citizen",
  "version": "1.1",
  "description": "Get AI-powered assistance for marriage registration on Kaveri portal. (Unaffiliated with the Government of Karnataka)",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://kaveri.karnataka.gov.in/*"],
  "content_scripts": [
    {
      "matches": ["https://kaveri.karnataka.gov.in/*"],
      "js": ["assets/index.js"],
      "css": ["assets/index.css"]
    }
  ]
}
