{
  "manifest_version": 3,
  "name": "Ask Zen Citizen",
  "version": "2.0",
  "description": "Get AI-powered assistance for marriage registration on Kaveri portal. (Unaffiliated with the Government of Karnataka)",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Click to open Ask Zen Citizen"
  },
  "permissions": ["storage", "sidePanel", "tabs"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://kaveri.karnataka.gov.in/*"],
      "js": ["cta.js"],
      "css": ["assets/index.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["iframe.html", "perm.js", "cta.js"],
      "matches": ["https://kaveri.karnataka.gov.in/*"]
    }
  ],
  "host_permissions": ["https://kaveri.karnataka.gov.in/*"]
}
